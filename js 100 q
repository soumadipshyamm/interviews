// Find the first non-repeating character in a string.
let str = "werewerrrr"
let totalChar = []
for (let i = 0; i < str.length; i++) {

  let char = str[i];


  if (totalChar[char] === undefined) {
    totalChar[char] = 1;
  } else {
    totalChar[char] = totalChar[char] + 1;
  }

  console.log(totalChar)
}
console.log(totalChar)

function findFirstNonRepeatingCharNaive(str) {
  for (let i = 0; i < str.length; i++) {
    console.log("str[i]-1", str[i])
    let isUnique = true;
    for (let j = 0; j < str.length; j++) {
      console.log("str[i]-2", str[i])
      console.log("str[j]-2", str[j])
      // Check if characters match, but make sure they aren't the same index
      if (i !== j && str[i] === str[j]) {
        console.log("str[i]-3", str[i]);
        console.log("str[j]-3", str[j]);
        isUnique = false;
        break; // A duplicate was found, no need to check further
      }
    }
    if (isUnique) {
      console.log("str[i]-4", str[i]);
      return str[i]; // Return the first character found with no duplicates
    }
  }
  return null; // No non-repeating character found
}

// --- Examples ---
console.log(`'teeter' ->`, findFirstNonRepeatingCharNaive("teeter")); // r

function findFirstNonRepeatingChar (str) {
    const reducedObj = str.split("").reduce((acc, el) => {
        if (acc[el]) {
            acc[el]++
        }
        else {
            acc[el] = 1
        }
        return acc
    }, {})
    console.log("reducedObj: ", reducedObj)
    let first = ""
    for(let [key, value] of Object.entries(reducedObj)) {
        if (value === 1) {
            console.log("key: ", key)
            first = key
            break;
        }
    }
    return first;
}
/***************************************************************************/
Check if two strings are anagrams.

function isAnagram ( str1, str2) {
    const sortedStr1 = str1.split('').sort().join('');
    const sortedStr2 = str2.split('').sort().join('');
    if (sortedStr1 === sortedStr2) {
        return true;
    } else {
        return false;
    }
}
**************************************************************************
Reverse each word in a sentence.
function reverseEachWordv (sentence) {
    return sentence.split(" ").reverse().join(" ")
}
**************************************************************************
Remove duplicate characters from a string.
function removeRepeatedString (str) {
    const reducedObj = str.split("").reduce((acc, el) => {
        if (acc[el.toLocaleLowerCase()]) {
            acc[el.toLocaleLowerCase()]++
        }
        else {
            acc[el.toLocaleLowerCase()] = 1
        }
        return acc
    }, {})
    console.log("reducedObj: ", reducedObj)
    let first = ""
    for(let key of Object.keys(reducedObj)) {
       first = first + key
    }
    return first;
}


