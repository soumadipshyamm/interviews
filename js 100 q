Find the longest word in a sentence.
function longestWord ( sentence ) {
    const wordArr = sentence.split(' ');
    let longest = wordArr[0];
    for (let i = 0; i < wordArr.length; i++) {
        if (wordArr[i].length > longest.length) {
            longest = wordArr[i];
        }
        }
    return longest;    
}
